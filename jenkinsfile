pipeline {
  agent any
  stages {
  stage("Build") {
      steps {
        script {
          echo 'Building the application'
        }
      }
    }
  stage("Test") {
      steps {
        script {
          echo 'Testing the application'
        }
      }
    }
 
  stage("Deploy") {
      steps {
        script {
          echo 'Deploying the application'
        }
      }
    }
  }
}
